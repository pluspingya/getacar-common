{
  "compilerOptions": {
    "lib": ["es2019", "esnext"],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowUnreachableCode": true,
    "outDir": "lib",
    "baseUrl": ".",
    "declaration": true,
    "target": "es2015",
    "module": "commonjs",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    "**/*.test.ts"
  ]
}